<UserControl x:Class="Pinacotecas_211G0391.Views.UCDatos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pinacotecas_211G0391.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
       

        <StackPanel>
            <TextBlock FontSize="20" HorizontalAlignment="Center">Datos</TextBlock>
            <Label>Nombre</Label>
            <TextBlock Text="{Binding Pinacoteca.Nombre}"></TextBlock>
            <Label>Ciudad</Label>
            <TextBlock Text="{Binding Pinacoteca.Ciudad}"></TextBlock>
            <Label>Dirección</Label>
            <TextBlock Text="{Binding Pinacoteca.Direccion}"></TextBlock>
            <Label>Metros Cuadrados)</Label>
            <TextBlock Text="{Binding Pinacoteca.Area}"></TextBlock>



        </StackPanel>



    </DockPanel>
</UserControl>
